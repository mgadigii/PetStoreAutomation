<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
   <!-- <Properties>-->
		<!--<Property name="basePath">./logs</Property> -->
	<!--</Properties>-->
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- File Appender -->
        <RollingFile name="File" fileName="logs/automation.log" filePattern="${basePath}/automation-%d{yyyy-MM-dd HH:mm:ss}" append="true">
            
                <PatternLayout Pattern = "%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
                <SizeBasedTriggeringPolicy size="5000"/>
            
        </RollingFile>
    </Appenders>

    <Loggers>
             <!-- Root logger -->
        <Root level="info">
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>